<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    <!-- 完成实体类和数据库表之间的映射关系 -->
    <class name="com.woniuxy.hibernate.test.User" table="users">
    <!-- 映射主键的type：java中的数据类型 -->
   
    <id name="id" column="id" type="int">
    <!--主键生成策略  -->
    <generator class="identity"/>
    </id>
    <property name="username" column="username" length="50" type="string"/>
    <property name="userpass" column="userpass" length="50" type="string"/>
    <property name="age" column="age"  type="int"/>
    </class>
    </hibernate-mapping>