<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">
		<!-- 引入实体类对象：必须添加entity注解 -->
		<class>com.woniuxy.hibernate.entity.User</class>
		<class>com.woniuxy.hibernate.entity.Student</class>
		<class>com.woniuxy.hibernate.entity.Order</class>
		
		<properties>
			<!-- 加载数据库驱动 -->
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<!-- 获取数据库用户名 -->
			<property name="hibernate.connection.username" value="root" />
			<!-- 获取数据库密码 -->
			<property name="hibernate.connection.password" value="" />
			<!-- 获取数据库url -->
			<property name="hibernate.connection.url" value="jdbc:mysql:///db_hibernate" />
			<!-- 设置表的生成策略 -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<!-- 设置数据库方言 -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />

			<!-- 在控制台打印并显示sql语句 -->
			<property name="hibernate.show_sql" value="true" />

			<!-- 格式化sql语句 -->
			<property name="hibernate.format_sql" value="true" />
			<!-- 设置c3p0数据源 -->
			<property name="hibernate.c3p0.max_size" value="2"/>
			<property name="hibernate.c3p0.min_size" value="2"/>
			<property name="hibernate.c3p0.acquire_increment" value="2"/>
		</properties>
	</persistence-unit>
</persistence>
