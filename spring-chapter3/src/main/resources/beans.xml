<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
		   http://www.springframework.org/schema/beans/spring-beans-4.2.xsd  
		   http://www.springframework.org/schema/context  
		   http://www.springframework.org/schema/context/spring-context-4.2.xsd
		   http://www.springframework.org/schema/aop 
		  http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">
	<!-- 扫描实现类所在的包 -->
	<context:component-scan base-package="com.woniuxy.spring.service.impl" />
	<!-- 记录日志信息所在的实体类 -->
	<bean id="logger" class="com.woniuxy.spring.advice.Logadvice"></bean>
	<!-- 切面信息配置 -->
	<aop:config>
		<!-- 配置切点 -->
		<aop:pointcut
			expression="execution(* com.woniuxy.spring.service.impl.PayServiceImpl.*(..))"
			id="pointcut" />
		<!-- 配置切面，增强，该节点用于一个切面包含多个切点和多个增强的配置 -->
		<aop:aspect ref="logger">
			<!-- 前置增强 -->
			<aop:before method="before" pointcut-ref="pointcut" />
			<!-- 后置增强 -->
			<aop:after method="after" pointcut-ref="pointcut" />
			<!-- 环绕增强 ，pointcut-ref需要表示引入的切点 -->
			<aop:around method="around" pointcut-ref="pointcut" />
		</aop:aspect>
	</aop:config>
</beans>

