<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>StudentMS28</display-name>
  <listener>
  	<listener-class>com.woniuxy.studentms28.listener.RepetitionLoginListener</listener-class>
  </listener>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.woniuxy.studentms28.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.woniuxy.studentms28.servlet.RegisterServlet</servlet-class>
  </servlet>
<servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>PictureCheckCodeServlet</servlet-name>
    <servlet-class>com.woniuxy.studentms28.servlet.PictureCheckCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.woniuxy.studentms28.servlet.DeleteServlet</servlet-class>
  </servlet>

  <filter>
  	<filter-name>CharacterSetFilter</filter-name>
  	<filter-class>com.woniuxy.studentms28.filter.CharacterSetFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>LoginControlFilter</filter-name>
  	<filter-class>com.woniuxy.studentms28.filter.LoginControlFilter</filter-class>
  </filter>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PictureCheckCodeServlet</servlet-name>
    <url-pattern>/PictureCheckCodeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/DeleteServlet</url-pattern>
  </servlet-mapping>
  <filter-mapping>
  	<filter-name>CharacterSetFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginControlFilter</filter-name>
  	<url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>JSP/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>