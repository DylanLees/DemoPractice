<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
		   http://www.springframework.org/schema/beans/spring-beans-4.2.xsd  
		   http://www.springframework.org/schema/context  
		   http://www.springframework.org/schema/context/spring-context-4.2.xsd
		   http://www.springframework.org/schema/aop 
		  http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">
	<context:component-scan base-package="com.woniuxy.spring.dao" />
	<!-- 配置事务增强 -->
	<bean id="tx" class="com.woniuxy.spring.advice.TransactionAdvice">
		<property name="transactionManagement">
			<bean class="com.woniuxy.spring.impl.HibernateTransactionManagement"></bean>
		</property>
	</bean>
	<!-- 配置aop -->
	<aop:config>
		<aop:pointcut expression="execution(* com.woniuxy.spring.impl.*.*(..))" id="txpointcut" />
		<aop:aspect ref="tx">
			<aop:around method="around" pointcut-ref="txpointcut" />
		</aop:aspect>
	</aop:config>
</beans>

