<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.9org/dtd/mybatis-3-config.dtd">
<configuration>
<!-- 引入外部的属性文件 -->
	<properties resource="jdbc.properties"></properties>
	<typeAliases >
	<!-- 逐个取别名 -->
	<typeAlias type="com.woniuxy.mybatis.entity.User" alias="user"/>
	<!-- 以简单类名作为别名，不区分大小写 -->
<!-- 	<package name="com.woniuxy.mybatis.entity"/> -->
	</typeAliases>
	<!--数据库集合
	default:默认使用的数据库环境
	-->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driver}" />
				<property name="url" value="${jdbc.url}" />
				<property name="username" value="${jdbc.username}" />
				<property name="password" value="${jdbc.password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mappings/user.xml" />
		<mapper resource="mappings/uuid.xml"/>
	</mappers>
</configuration>