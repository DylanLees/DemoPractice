<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">
		<!-- 引入实体对象 -->
		<class>com.woniuxy.hibernate.entity.Users</class>
		<class>com.woniuxy.hibernate.entity.Students</class>
		<class>com.woniuxy.hibernate.entity.Orders</class>
		<class>com.woniuxy.hibernate.entity.Teachers</class>
		<class>com.woniuxy.hibernate.entity.IdCards</class>
		<class>com.woniuxy.hibernate.entity.Subjects</class>
		<properties>
			<!-- jdbc信息配置 -->
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"></property>
			<property name="hibernate.connection.url" value="jdbc:mysql:///db_test"></property>
			<property name="hibernate.connection.username" value="root"></property>
			<property name="hibernate.connection.password" value=""></property>
			<!-- 表的生成策略 -->
			<property name="hibernate.hbm2ddl.auto" value="update"></property>
			<!-- 显示sql语句 -->
			<property name="hibernate.show_sql" value="true"></property>
			<!-- 格式化sql语句 -->
			<property name="hibernate.format_sql" value="true"></property>
			<!-- 方言 -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<!-- 配置数据源 -->
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.min_size" value="2" />
			<property name="hibernate.c3p0.max_statements" value="100" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />
			<property name="hibernate.c3p0.acquire_increment" value="2" />
		</properties>
	</persistence-unit>
</persistence>
