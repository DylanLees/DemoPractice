<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Ecart</display-name>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.woniuxy.ecart.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PictureCheckCodeServlet</servlet-name>
		<servlet-class>com.woniuxy.ecart.servlet.PictureCheckCodeServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.woniuxy.ecart.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowGoodsByPageServlet</servlet-name>
    <servlet-class>com.woniuxy.ecart.servlet.ShowGoodsByPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowGoodsDetailServlet</servlet-name>
    <servlet-class>com.woniuxy.ecart.servlet.ShowGoodsDetailServlet</servlet-class>
  </servlet>



	<servlet-mapping>
		<servlet-name>PictureCheckCodeServlet</servlet-name>
		<url-pattern>/PictureCheckCodeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowGoodsByPageServlet</servlet-name>
    <url-pattern>/ShowGoodsByPageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowGoodsDetailServlet</servlet-name>
    <url-pattern>/ShowGoodsDetailServlet</url-pattern>
  </servlet-mapping>
	<welcome-file-list>
		<welcome-file>jsp/goodsdisplay.jsp</welcome-file>

	</welcome-file-list>
</web-app>